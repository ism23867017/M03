from sense_hat import SenseHat
sense = SenseHat()
def imagen():
  r=[255,0,0]
  b=[255,255,255]
  image= [
  b,b,b,b,b,b,b,b,
  b,r,r,b,b,r,r,b,
  r,r,r,r,r,r,r,r,
  r,r,r,r,r,r,r,r,
  b,r,r,r,r,r,r,b,
  b,b,r,r,r,r,b,b,
  b,b,b,r,r,b,b,b,
  b,b,b,b,b,b,b,b,
  ]
  
  sense.set_pixels(image)
  
  if sense.temp >= 70:
    r=[255,255,0]
    b=[159,0,255]
    image=[
    b,b,b,b,b,b,b,b,
    b,r,r,b,b,r,r,b,
    r,r,r,r,r,r,r,r,
    r,r,r,r,r,r,r,r,
    b,r,r,r,r,r,r,b,
    b,b,r,r,r,r,b,b,
    b,b,b,r,r,b,b,b,
    b,b,b,b,b,b,b,b,
    ]
  
    sense.set_pixels(image)

while True:
  
  imagen()
